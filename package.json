  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@types/better-sqlite3": "^7.6.10",
    "@types/node": "^20.11.17",
    "drizzle-kit": "^0.21.4",
    "simple-git-hooks": "^2.11.1",
    "sherif": "^0.8.4",
    "tsx": "^4.11.0"
  },
